UserParameter=nginx.accepted[*],{{ zabbix_agent_script_path }}/nginx-stat.py -h $1 -p $2 -a accepted
UserParameter=nginx.active[*],{{ zabbix_agent_script_path }}/nginx-stat.py -h $1 -p $2 -a active
UserParameter=nginx.handled[*],{{ zabbix_agent_script_path }}/nginx-stat.py -h $1 -p $2 -a handled
UserParameter=nginx.reading[*],{{ zabbix_agent_script_path }}/nginx-stat.py -h $1 -p $2 -a reading
UserParameter=nginx.total[*],{{ zabbix_agent_script_path }}/nginx-stat.py -h $1 -p $2 -a requests
UserParameter=nginx.waiting[*],{{ zabbix_agent_script_path }}/nginx-stat.py -h $1 -p $2 -a waiting
UserParameter=nginx.writing[*],{{ zabbix_agent_script_path }}/nginx-stat.py -h $1 -p $2 -a writing

UserParameter=nginx.version,nginx -v 2>&1
